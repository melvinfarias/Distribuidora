<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<section class="container-productos" style="margin-top:120px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>¡Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión<i class="fas fa-sign-out-alt"> </i></i> </a>
            </p>
        </div>
    </div>
</section>

<section class="listadoProductos">
    <div class="row">
        <div class="col-7" style="margin-top: 9px;">
            <h4>Listado de productos</h4>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/productos/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" >#</th>
                        <th scope="col">Producto</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id_productos}} </th>
                        <td>{{producto}} </td>
                        <td class="text-end">
                            <a href="/admin/productos/modificar/{{id_productos}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/productos/eliminar/{{id_productos}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                   {{/each}} 
                </tbody>
            </table>
        </div>
    </div>
</section>